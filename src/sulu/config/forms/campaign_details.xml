<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>campaign_details</key>

    <properties>
        <property name="title" type="text_line" mandatory="true" colspan="3">
            <meta>
                <title>Title</title>
            </meta>
        </property>
        <property name="fileKey" type="text_line" mandatory="true" colspan="3">
            <meta>
                <title>File Key</title>
            </meta>
        </property>
        <property name="isActive" type="checkbox" mandatory="true" colspan="2">
            <meta>
                <title>Is Active?</title>
            </meta>
            <params>
                <param name="type" value="toggler"/>
                <param name="default_value" value="true"/>
            </params>
        </property>
        <property name="isCloseable" type="checkbox" mandatory="true" colspan="2">
            <meta>
                <title>Is Closeable</title>
            </meta>
            <params>
                <param name="type" value="toggler"/>
                <param name="default_value" value="true"/>
            </params>
        </property>
        <property name="isDependentOnExternalProvider" type="checkbox" colspan="2">
            <meta>
                <title>Is Dependent On External Provider?</title>
            </meta>
            <params>
                <param name="type" value="toggler"/>
                <param name="default_value" value="true"/>
            </params>
        </property>
        <property name="iosMinVersion" type="text_line" colspan="2">
            <meta>
                <title>Ios Min Version</title>
            </meta>
        </property>
        <property name="androidMinVersion" type="text_line" colspan="2">
            <meta>
                <title>Android Min Version</title>
            </meta>
        </property>
        <property name="campaignId" type="number" colspan="2">
            <meta>
                <title>Campaign Id</title>
            </meta>
            <params>
                <param name="min" value="0"/>
                <param name="max" value="100000"/>
                <param name="step" value="1"/>
            </params>
        </property>
        <property name="externalId" type="text_line" colspan="3">
            <meta>
                <title>External Id</title>
            </meta>
        </property>
        <property name="serviceId" type="text_line" colspan="3">
            <meta>
                <title>Service Id</title>
            </meta>
        </property>
        <property name="section" type="text_line" colspan="3">
            <meta>
                <title>Section</title>
            </meta>
        </property>
        <property name="customCssClass" type="text_line" colspan="3">
            <meta>
                <title>Custom CSS Class</title>
            </meta>
        </property>
        <property name="notificationType" type="text_line" colspan="3">
            <meta>
                <title>Notification Type</title>
            </meta>
        </property>
        <property name="params" type="text_line" colspan="3">
            <meta>
                <title>Params</title>
            </meta>
        </property>
        <property name="startDate" type="datetime" colspan="3">
            <meta>
                <title>app.start_date</title>
            </meta>
        </property>
        <property name="endDate" type="datetime" colspan="3">
            <meta>
                <title>app.end_date</title>
            </meta>
        </property>
        <property name="stateData" type="text_line">
            <meta>
                <title>State Data</title>
            </meta>
        </property>

    </properties>
</form>